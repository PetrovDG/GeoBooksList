<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="relative_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/tan_background</item>
    </style>

    <style name="linear_layout_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/keyWord</item>
        <item name="android:maxLength">25</item>
    </style>

    <style name="clear_button">
        <item name="android:background">@drawable/clear_button</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="list_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="book_text_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_toRightOf">@id/image</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="main_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/margin</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
        <item name="android:paddingTop">@dimen/margin</item>
    </style>

    <style name="linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="cover_image">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>

    <style name="bookTitles">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/zero_width</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <style name="bookText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/zero_width</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
